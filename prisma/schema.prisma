generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model State {
  id           String        @id @db.Char(2)
  name         String
  abbreviation String        @unique @db.Char(2)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  observations Observation[]
}

model DataSource {
  id            String         @id
  name          String
  description   String?
  homepageUrl   String?
  apiDocsUrl    String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  ingestionRuns IngestionRun[]
  metrics       Metric[]
}

model Metric {
  id           String        @id
  name         String
  description  String?
  unit         String
  category     String
  isDefault    Boolean       @default(false)
  sourceId     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  source       DataSource    @relation(fields: [sourceId], references: [id])
  observations Observation[]

  @@index([sourceId])
}

model Observation {
  id        String   @id @default(uuid())
  stateId   String
  metricId  String
  year      Int
  value     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metric    Metric   @relation(fields: [metricId], references: [id])
  state     State    @relation(fields: [stateId], references: [id])

  @@unique([stateId, metricId, year])
  @@index([metricId, year])
  @@index([stateId, year])
}

model IngestionRun {
  id           String          @id @default(uuid())
  dataSourceId String
  startedAt    DateTime        @default(now())
  completedAt  DateTime?
  status       IngestionStatus @default(in_progress)
  details      Json?
  dataSource   DataSource      @relation(fields: [dataSourceId], references: [id])

  @@index([dataSourceId])
}

enum IngestionStatus {
  in_progress
  success
  failed
  partial
}
